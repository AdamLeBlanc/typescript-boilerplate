{
  "name": "npm-package-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for building npm packages in typescript",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:ci": "jest --collectCoverage",
    "test:watch": "jest --watch",
    "build": "rimraf ./build && tsc",
    "start": "npm run build && node ./build/index.js",
    "dev:watch": "ts-node-dev ./src/index.ts"
  },
  "keywords": [
    "typescript",
    "nodejs",
    "npm",
    "boilerplate"
  ],
  "author": "Adam LeBlanc",
  "license": "MIT",
  "devDependencies": {
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "jest": "^26.6.1",
    "ts-jest": "^26.4.3"
  }
}
